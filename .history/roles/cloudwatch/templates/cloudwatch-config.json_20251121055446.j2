jdjdcat > roles/cloudwatch/templates/cloudwatch-config.json.j2 << 'EOF'
{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/home/{{ app_user }}/.pm2/logs/{{ pm2_app_name }}-out.log",
            "log_group_name": "{{ cloudwatch_log_groups.app }}",
            "log_stream_name": "{instance_id}-stdout-{{ environment }}",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/{{ app_user }}/.pm2/logs/{{ pm2_app_name }}-error.log",
            "log_group_name": "{{ cloudwatch_log_groups.app }}",
            "log_stream_name": "{instance_id}-stderr-{{ environment }}",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/{{ project_name }}_{{ environment }}_access.log",
            "log_group_name": "{{ cloudwatch_log_groups.nginx_access }}",
            "log_stream_name": "{instance_id}-access-{{ environment }}",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/{{ project_name }}_{{ environment }}_error.log",
            "log_group_name": "{{ cloudwatch_log_groups.nginx_error }}",
            "log_stream_name": "{instance_id}-error-{{ environment }}",
            "timezone": "UTC"
          }
        ]
      }
    }
  }
}
